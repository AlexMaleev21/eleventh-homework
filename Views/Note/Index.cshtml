@model IEnumerable<Note>

<h1>Замітки</h1>

<a asp-controller="Note" asp-action="Create" class="btn btn-primary">Create Note</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Tags</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
                <tr>
                    <td>@note.Title</td>
                    <td>@note.Content</td>
                    <td>@note.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@string.Join(", ", note.Tag)</td>
                    <td>
                            <a asp-controller="Note" asp-action="Edit" asp-route-id="@note.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-controller="Note" asp-action="Delete" asp-route-id="@note.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>