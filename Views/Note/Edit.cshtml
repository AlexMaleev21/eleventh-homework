@model Note

<h1>Edit Note</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title">Name</label>
        <input type="text" class="form-control" id="Title" name="Title" asp-for="Title" required>
        <span asp-validation-for="Title" class=" alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">Text</label>
        <textarea class="form-control" id="Content" name="Content" asp-for="Content" rows="5" required></textarea>
        <span asp-validation-for="Content" class=" alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tag">Tag</label>
        <input type="text" class="form-control" id="Tag" name="Tag" value="@string.Join(", ", Model.Tag)">
        <span asp-validation-for="Tag" class=" alert-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>


@section Scripts {
    @{
                <partial name="_ValidationScriptsPartial" />
    }
}